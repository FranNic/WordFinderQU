  </PropertyGroup>

  <ItemGroup>
    <None Remove="Matrix.txt" />
    <None Remove="Matrix_10x10.txt" />
    <None Remove="Matrix_64x64.txt" />
    <None Remove="WordStream.txt" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Matrix_10x10.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
